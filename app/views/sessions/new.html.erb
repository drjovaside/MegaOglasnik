<h1>Login</h1>

<p id="error"><%= flash[:error] %></p>

<%= form_for :session, :url => sessions_path do |f| %>
<p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Login" %></p>
  <p><%= link_to "Glavna", 'home' %></p>
  
<% end %>