<!doctype>
<html>
<head>
<%= javascript_include_tag "angular" %>
<%= javascript_include_tag "index" %>

</head>
<body  ng-app="CategoryApp">

<div ng-controller="CategoryAds" data-ng-init="latestAds()">


<div style="margin-top: 30px; ">
    
<div ng-repeat="result in results" >    
  <div class="row" style="float: left; margin: 20px; width: 16%; ">
    <div class="thumbnail">
      <%= image_tag("no-img.jpg") %>
      <div class="caption">
        <h3>{{result.title}}</h3>
        <p>{{result.description}}</p>
        <p>Cijena: {{result.price}} KM</p><br/>
          
           <!--    <button ng-click="" type="button" class="btn btn-default btn-sm">View</button> -->
            <a href="#/product_detail" type="button" class="btn btn-default btn-sm">View</a>
           <button type="button" class="btn btn-primary btn-sm" ng-click="dodajukorpu(result.price)"><i class=" icon-shopping-cart">Add in cart</button>
      </div>
  </div>
</div>
 </div>     

    <div class="list-group" style="margin-left: 15px; width: 16%; float: left; ">
  <a href="" class="list-group-item active" >
    <%= t :cart %>
  </a>
   <table>
    <tr>
    <td>
    </br>
      <p><b>Total: {{items}}</b></p>
    </td>
    <td>
  <%= image_tag("cart_icon.png") %>  
</td>
</tr>
</table>
  <a href="#/cart" type="button" class="btn btn-primary btn-sm" ng-click="total(items)" ><font color="white">View cart</font></a>
</div>



    </div>
<br/>

    
</div>


<script type="text/javascript">
    $('.dropdown-menu input, .dropdown-menu label').click(function(e) {
        e.stopPropagation();
    });
</script>
    

</body>
</html>

