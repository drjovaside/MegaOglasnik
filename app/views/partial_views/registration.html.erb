<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<body ng-app="CategoryApp">
<div style="margin: 20%; margin-top:100px;">
<h2 class="page-header"> Registration </h2><br/>
<alert style="width: 450px;"ng-repeat="alert in registration_alerts" type="{{alert.registration_type}}">{{alert.registration_msg}}</alert>
<form role="registration" ng-controller="CategoryAds" >
     <input type="text" class="span2 form-control" id="inputUsername" placeholder="Username" ng-model="user.username" style="width: 250px;">
     <input class="form-control" style="margin-bottom: 15px; margin-top: 10px;width: 250px;" type="firstname" ng-model="user.firstname" placeholder="First Name">
    <input class="form-control" style="margin-bottom: 15px; margin-top: 10px;width: 250px;" type="lastname" ng-model="user.lastname" placeholder="Last Name">
    <input type="text" class="span2 form-control" id="inputEmail" placeholder="Email" ng-model="user.email" style="width: 250px;">
     <input class="form-control" style="margin-bottom: 15px; margin-top: 10px;width: 250px;" type="password" ng-model="user.password" placeholder="Password">
     <a class="btn btn-primary" style=" margin-bottom: 10px; width: 200px; height: 32px; font-size: 13px;" ng-click="registruj(user)"><font color="white">Registruj se</font></a>
</form>
<a href="#login">Prijava.</a>
</div>
</body>