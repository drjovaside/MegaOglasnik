<!doctype>
<html>
<head>
 

</head>
<body ng-app="CategoryApp">
<div  style=" padding-top: 10px;" ng-controller="EmailController" >

<div class="panel panel-default" style="padding: 10px; margin-right: 15px;">

  <div>
    <h2><strong>{{ 'TITLE' | translate }}</strong>: {{message.title}}</h2>
   <strong>{{ 'FROM' | translate }}:</strong> {{message.sender_username}} <br />
        
        <br />
        <p> <strong>{{ 'CONTENTS' | translate }}: </strong> <br>
           {{message.contents}} 
        </p>
    
        <a href="#messages" class="btn btn-primary">Close</a>
    </div>
</div>

    <br/>
    <br/>
    <br/>
    <br/>
    
    <h3><strong>{{ 'REPLY' | translate }}:</strong></h3>
           <form role="sendMessage"> 
        {{ 'TO' | translate }}:
        <input class="form-control" style="margin-bottom: 15px; margin-top: 10px;width: 250px;" type="text" ng-model="message.receiver_username" placeholder="{{message.sender_username}}" disabled>
       {{ 'TITLE' | translate }}:
                <input class="form-control" type="text"  ng-model="message.title" placeholder="Re: {{poruka.title}}" required><br />
       {{ 'CONTENTS' | translate }}:
                <textarea class="form-control" style="width:95%;" rows="10" 
                    ng-model="message.content" required></textarea>
               <br/>
                <a href="#messages" class="btn btn-default" ng-click="sendMessage(message)" ng-disabled="sendMessage.$invalid">{{ 'SEND' | translate }}</a>
            </form>

</div>
    </body>
    </html>