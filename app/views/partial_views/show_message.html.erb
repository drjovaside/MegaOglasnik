<!doctype>
<html>
<head>
<%= javascript_include_tag "angular" %>
<%= javascript_include_tag "index" %>
<%= javascript_include_tag "angular-resource" %>
<%= javascript_include_tag "angular-route.min" %>

   

</head>
<body ng-app="CategoryApp">
<div  style=" margint-left: 20%; width: 70%; padding-left: 20%; padding-top: 10px;" ng-controller="EmailController" >
    

        <h3>{{message.title}}</h3>
    
        <strong>From:</strong> {{message.sender_username}} <br />
        
        <br />
        <p>
           {{message.contents}} 
        </p>
    
        <a href="#messages" class="btn btn-primary">Close</a>

    <br/>
           <form role="sendMessage"> 
        To:
        <input class="form-control" style="margin-bottom: 15px; margin-top: 10px;width: 250px;" type="text" ng-model="message.receiver_username" placeholder="{{message.sender_username}}" disabled>
       Subject:
                <input class="form-control" type="text"  ng-model="message.title" placeholder="Re: {{poruka.title}}" required><br />
       Content:
                <textarea class="form-control" style="width:95%;" rows="10" 
                    ng-model="message.content" required></textarea>
                <a  class="btn btn-primary" ng-click="sendMessage(message)" ng-disabled="sendMessage.$invalid">Send</a>
            </form>

</div>
    </body>
    </html>