<html>
<head>
 

</head>
<body ng-app="CategoryApp">
<div  ng-controller="EmailController" style=" margin-top: 20px;">
     <h3 style="" class="page-header">{{ 'COMPOSE_MESSAGE' | translate }} </h3>   
        <div>
            <form role="sendMessage">
                {{ 'TO' | translate }}:
                <input type="text" class="span2 form-control" placeholder="{{message}}" style="width:20%; margin-bottom: 5px;"
                    ng-model="message.receiver_username" required><br />
                {{ 'TITLE' | translate }}:
                <input type="text" class="span2 form-control" placeholder="No Subject" style="width:20%;margin-bottom: 5px;"
                    ng-model="message.title" required><br />
                {{ 'CONTENTS' | translate }}:
                <textarea style="width:95%;" rows="10" class="span2 form-control" 
                    ng-model="message.content" required></textarea><br/>
                <a href="#sent" class="btn btn-primary" ng-click="sendMessage(message)" ng-disabled="sendMessage.$invalid">{{ 'SEND' | translate }}</a>
            </form>
        </div>
        
    </div>
    </body>
    </html>