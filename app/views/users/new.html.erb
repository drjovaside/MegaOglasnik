<h1>Sign up</h1>
<p>Find me in app/views/users/new.html.erb</p>

<%= form_for(@user) do |f| %>
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />
</div>
<div class="field">
	<%= f.label :email %><br />
	<%= f.text_field :email %><br />
</div>
<div class="field">
	<%= f.label :password %><br />
	<%= f.text_field :password %><br />
</div>

<div class="action">
	<%= f.submit "Sign up" %>
	</div>


	<% end %>
	