    <nav id="myNavbar" class="navbar navbar-default" role="navigation">
      
           
        <!-- Brand and toggle get grouped for better mobile display -->

    
  <div class="navbar-form navbar-right" role="options">

  <% if session[:user_id] == nil %>
  <button type="button" class="btn-sm btn btn-info" onclick="window.location.href='/login'"> <%= t :login %> </button>
  <button type="button" class="btn-sm btn btn-info" onclick="window.location.href='/users/new'"> <%= t :registration %> </button>
  <% else %>
  <%= link_to @user.username, @user %>
  <button type="button" class=" btn-sm btn btn-info" onclick="window.location.href='/logout'"> <%= t :logout %> </button>
  <% end %>
  <div class="btn-group">
  <button type="button" class="btn-sm btn btn-default dropdown-toggle" data-toggle="dropdown">
    <%= t :choose_language %> <span class="caret"></span>
  </button>
  
      <ul class="dropdown-menu" role="menu">
        <li><a href="/home/language/bosnian" ><%= t :bosnian %></a></li>
        <li><a href="/home/language/english" ><%= t :english %></a></li>
        <li class="divider"></li>
        <li><a href="/home/language/default"><%= t :default_language %></a></li>
      </ul>
</div>

</div>
<div class="navbar-form navbar-center" role="search">
    <%= form_tag :controller => 'ads', :action => 'search', :method => 'get' do %>
