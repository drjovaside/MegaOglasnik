<!doctype>
<html>
<head>
<title> MegaOglasnik Home </title>
		<!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">



<link rel="javascripts" href="javascripts/application.js">
        <!-- Optional theme -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">
        <link rel="stylesheet" src="stylesheets/application.css"/>
        <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application.js" %>
    <%= javascript_include_tag "angular" %>
    <%= csrf_meta_tag %>
        <script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>

<style type="text/css">
  .bs-example{
      margin: 20px;
      }
   
</style>

</head>
<body ng-app="CategoryApp">

<div ng-controller="CategoryAds">

     <nav class="" role="navigation" style="background-color: #5C2849;height: 60px; padding-top: 7px" >
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= image_tag("logo.png") %></li>        
      </ul>
      <form class="navbar-form navbar-left" role="search" style="height: 20px;">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Ukucajte nešto..." ng-model="rijec">
        </div>
        <button type="submit" class="btn btn-default" ng-click="trazi(rijec)">Traži</button>
      </form>
      <ul class="nav navbar-nav navbar-right">
          <li><a class="navbar-brand" href="#">Objavi</a></li>
          <li><a class="navbar-brand" href="#" ng-click="latestAds()">Najnoviji oglasi</a></li>
          <li><a class="navbar-brand" href="#">Kontakt</a></li>
        
          <li><a href="/users/new"><strong>Registracija</strong></a></li>
          <li class="divider-vertical"></li>
          <li class="dropdown">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">Prijava <strong class="caret"></strong></a>
            <div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px; width: 250px;">
              <!-- Login form here -->
     <form role="login" >
     <input type="text" class="span2 form-control" id="inputEmail" placeholder="Email" ng-model="user.email">
     <input class="form-control" style="margin-bottom: 15px; margin-top: 10px;" type="password" ng-model="user.password" size="45" placeholder="Password" />
     <input style="float: left; margin-right: 10px; margin-bottom: 15px; " type="checkbox" value="1"/>
     <label class="string optional" for="user_remember_me">Zapamti</label>
     <button class="btn btn-primary" style="clear: left; margin-bottom: 10px; width: 80%; height: 32px; font-size: 13px;" ng-click="login(user)" >Prijavi se</button>
</form>
            </div>
          </li>
        
          
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<br/>
<h2><center><%= t :welcome_to_megamarket %>!</center></h2>
<br/>

<div class="list-group" style="margin-left: 15px; width: 16%; float: left;">
  <a href="" class="list-group-item active">
    <%= t :categories %>
  </a>
  <a href="" class="list-group-item" ng-click="vozila()"><%= t :vehicles %></a>
  <a href="" class="list-group-item" ng-click="nekretnine()"><%= t :real_estate %></a>
  <a href="" class="list-group-item" ng-click="mobiteli()"><%= t :cell_phones %></a>
  <a href="" class="list-group-item" ng-click="sport()"><%= t :sports_equipment %></a>
  <a href="" class="list-group-item" ng-click="odjeca()"><%= t :clothing_and_footwear %></a>
  <a href="" class="list-group-item" ng-click="igrice()"><%= t :toys %></a>
  <a href="" class="list-group-item" ng-click="pcigre()"><%= t :video_games %></a>
  <a href="" class="list-group-item" ng-click="knjige()"> Knjige </a>
  <a href="" class="list-group-item" ng-click="umjetnost()"><%= t :art %></a>
  <a href="" class="list-group-item" ng-click="ostalo()"><%= t :other %></a>
</div>

<div style="margin-top: 30px; ">
    
<div ng-repeat="result in results" >    
  <div class="row" style="float: left; margin: 20px; width: 16%; ">
    <div class="thumbnail">
      <%= image_tag("logo.png") %>
      <div class="caption">
        <h3>{{result.title}}</h3>
        <p>{{result.description}}</p>
        <p>Cijena: {{result.price}} KM</p><br/>
          
          <a href="#" class="btn btn-default" role="button">Pogledaj</a>
      </div>
  </div>
</div>
 </div>     
    </div>
    
</div>


<script type="text/javascript">
    $('.dropdown-menu input, .dropdown-menu label').click(function(e) {
        e.stopPropagation();
    });
</script>
    

</body>
</html>

