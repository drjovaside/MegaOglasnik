
<html>
<head>
<!-- bootstrap -->
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
    <script src="http://code.jquery.com/jquery-2.0.3.min.js"></script> 
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>  

    <!-- x-editable (bootstrap version) -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.4.6/bootstrap-editable/css/bootstrap-editable.css" rel="stylesheet"/>
    <script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.4.6/bootstrap-editable/js/bootstrap-editable.min.js"></script>
    
    <!-- main.js -->
    <script src="main.js"></script>
</head>
<body>
<div class="container">

<h2> <%= t :ads %></h2><br/>


<ul class="nav nav-tabs">
  <li><a href="/home"><%= t :home %></a></li>
  <li class="active"><a href="/ads"><%= t :ads %></a></li>
  <li><a href="/categories"><%= t :categories %></a></li>
  <li><a href="/users"><%= t :users %></a></li>
  <li><a href="/ads/new"><%= t :create_ad %></a></li>
  <li><a href="/dashboards"> Dashboard </a></li>
  
  
</ul>


</div>

<div class="panel panel-default container">
	<div class="panel-heading"><%= t :ad_listing %></div>
<div class="panel-body">
	<table class="table table-condensed">
  <tr>
    <th class="darkerBG col-xs-1"><%= t :title %></th>
    <th class="darkerBG col-xs-1"><%= t :price %></th>
    <th class="darkerBG col-xs-1"><%= t :description %></th>
  </tr>
  </br>


  <tr>
     <% @ads.each do |ad| %>  
    
    <td class="darkBG col-xs-1"><a href="#" id="title" data-url="ads/<%= ad.id %>" data-title= "Enter title"><%= ad.title %></a></td>
    <td class="darkBG col-xs-1"><a href="#" id="price" data-url="ads/<%= ad.id %>"  data-title= "Enter price"><%= ad.price %></a></td>
    <td class="darkBG col-xs-1"><a href="#" id="description" data-url="ads/<%= ad.id %>"  data-title= "Enter description"><%= ad.description %></a></td> <br>

    <div class="btn-group" align="right">
    <td>
    <%= link_to (t :show), ad,:class => "btn btn-default" %>
    <%= link_to (t :edit), edit_ad_path(ad),:class => "btn btn-default" %>
    <%= button_to (t :destroy), ad, :method=>:delete, :class=> "btn btn-default",data: { confirm: (t :you_sure) + "?" } %></td>
    </div>
   </tr>
   <br/>
<% end %>
</table>
</div>
<%= link_to (t :new_ad), new_ad_path,:class => "btn btn-default" %>
</div>



<br />




    <div id="wrap">
      <div class="container">
      </div>
    </div>
    <div id="footer">
<br/>
  <a href="http://localhost:3000/home">
    <font size="2"><div class="container" style="text-align: center" >Copyright Â© All Rights Reserved</div></font>
</a>
    </div>
</body>

</html>